<Window x:Class="Konyvelo.KoltsegvetesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KoltsegvetesWindow" Height="706.4" Width="625">
    <ScrollViewer>
    <Grid Height="1825">
        <DataGrid x:Name="IDataGrid" ItemsSource="{Binding Source=Ilista}" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="607" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="I." Binding="{Binding azonosító}" Width="*" />
                <DataGridTextColumn Header="Előirányzat" Binding="{Binding előirányzat}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="IIDataGrid" ItemsSource="{Binding Source=IIlista}" HorizontalAlignment="Left" Height="102" Margin="0,136,0,0" VerticalAlignment="Top" Width="607" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="II. Perselypénzek" Binding="{Binding azonosító}" Width="*" />
                <DataGridTextColumn Header="Előirányzat" Binding="{Binding előirányzat}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="IIIDataGrid" ItemsSource="{Binding Source=IIIlista}" HorizontalAlignment="Left" Height="219" Margin="0,295,0,0" VerticalAlignment="Top" Width="607" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="III. Adományok" Binding="{Binding azonosító}" Width="*" />
                <DataGridTextColumn Header="Előirányzat" Binding="{Binding előirányzat}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="IVDataGrid" ItemsSource="{Binding Source=IIIlista}" HorizontalAlignment="Left" Height="292" Margin="0,582,0,-102" VerticalAlignment="Top" Width="607" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IV. Egyéb bevételek " Binding="{Binding azonosító}" Width="*" />
                <DataGridTextColumn Header="Előirányzat" Binding="{Binding előirányzat}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    </ScrollViewer>
</Window>
